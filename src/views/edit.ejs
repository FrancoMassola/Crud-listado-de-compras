<%- include ('partials/_header');  %>

<div class="container">
    <div class="row">
        <!-- FORM -->
        <div class="col-md-5 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <form action="/update/<%= producto_compra._id %>" method="POST">
                        <div class="form-group">
                            <input type="text" name="title" placeholder="Inserta un titulo" class="form-control"
                                value="<%= producto_compra.title %>">
                        </div>
                        <div class="form-group">
                            <textarea name="description" cols="80" class="form-control"
                                placeholder="Inserta una descripcion"><%= producto_compra.description %></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Update</button>
                    </form>
                </div>
            </div>

        </div>

    </div>
</div>

<%- include ('partials/_footer');  %>